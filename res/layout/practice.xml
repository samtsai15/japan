<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hira" />

    <Spinner
        android:id="@+id/JPNspin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:entries="@array/pro_array_hara"
        android:prompt="@string/food_prompt" />

    <ImageButton
        android:id="@+id/B1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/JPNspin"
        android:layout_below="@+id/JPNspin"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/B2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/B1"
        android:layout_below="@+id/B1"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/B3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/B2"
        android:layout_below="@+id/B2"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/B4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/B3"
        android:layout_below="@+id/B3"
        android:src="@drawable/ic_launcher" />

    <ImageButton
        android:id="@+id/B5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/B4"
        android:layout_below="@+id/B4"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>